{
  "compilerOptions": {
      "module": "ESNext",
      "useDefineForClassFields": true,
    "esModuleInterop": true,
      "target": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "declaration": true,
      "declarationMap": true,
      "experimentalDecorators": true,
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
  },
  "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "include": ["src/**/*"],
    "exclude": ["/dist/", "/test/**/*"]
